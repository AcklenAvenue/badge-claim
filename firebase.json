{
  "hosting": {
    "public": "build",
    "rewrites": [{
      "source": "/api/*",
      "function": "app"
    },{
      "source": "/api/pathways/*/*",
      "function": "app"
    },{
      "source": "/api/v2/pathways/*/*",
      "function": "app"
    },{
      "source": "/api/*/*",
      "function": "app"
    },{
      "source": "/login",
      "destination": "/index.html"
    },{
      "source": "/badgeid/*",
      "destination": "/index.html"
    },{
      "source": "/award/*",
      "destination": "/index.html"
    },{
      "source": "/explore",
      "destination": "/index.html"
    },{
      "source": "/webhooks",
      "destination": "/index.html"
    },{
      "source": "/pathway/*",
      "destination": "/index.html"
    },{
      "source": "/creations",
      "destination": "/index.html"
    },{
      "source": "/drafts",
      "destination": "/index.html"
    },{
      "source": "/drafts/*",
      "destination": "/index.html"
    }],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
